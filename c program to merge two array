    int size1, size2;

    printf("Enter size of the first array: ");
    scanf("%d", &size1);
    
    int arr1[size1];
    printf("Enter elements of the first array:\n");
    for (int i = 0; i < size1; i++) {
        scanf("%d", &arr1[i]);
    }

