#include <stdio.h>
#include <ctype.h>  

int countVowels(const char* str) {
    int count = 0;
    char c;

    while (*str) {
        c = tolower(*str);  
        
        if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u') {
            count++;  
        }
        str++;
    }

    return count;
}

int main() {
    char str[100];
    
    
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    
    int numVowels = countVowels(str);
    
    
    printf("Number of vowels: %d\n", numVowels);

    return 0;
}

