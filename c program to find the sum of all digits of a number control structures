 #include<stdio.h>
int main (){
  int number,sum=0;
  printf("enter an integer:");
  scanf(%d,&number);
    printf("Enter an integer: ");
    scanf("%d", &number);
 if (number < 0) {
        number = -number;
    }
    while (number > 0) {
        sum += number % 10;  // Add the last digit to sum
        number /= 10;        // Remove the last digit
    }
    printf("The sum of the digits is: %d\n", sum);

    return 0;
}
